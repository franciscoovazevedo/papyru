<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-10 col-sm-offset-1 col-md-8 col-md-offset-2 col-lg-6 col-lg-offset-3">
      <div class="row form-card">
        <div class="col-xs-10 col-xs-offset-1 col-sm-8 col-sm-offset-2">

          <div class="row form-card-header text-center">
            <h1>Edit <%= resource_name.to_s.humanize %></h1>
            <p><span>Compile the form</span> to change your profile.</p>
          </div>

          <div class="form-card-content">
            <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>

              <%= f.error_notification %>

              <div class="input">
                <%= f.input :email, required: true, label: false, input_html: { type: "email", placeholder: "Email" } %>
                <span><i class="fa fa-envelope-o"></i></span>

                <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
                  <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
                <% end %>
              </div>

              <div class="input">
                <%= f.input :password, autocomplete: "off", required: false, label: false, hint: "Leave it blank if you don't want to change password", input_html: { type: "password", placeholder: "New Password" } %>
                <span style="font-size: 2.2rem; left: 1.4rem;"><i class="fa fa-unlock"></i></span>
              </div>

              <div class="input">
                <%= f.input :password_confirmation, required: false, label: false, input_html: { type: "password", placeholder: "New Password Confirmation" } %>
                <span style="font-size: 2.2rem; left: 1.4rem;"><i class="fa fa-unlock-alt"></i></span>
              </div>

              <div class="input">
                <%= f.input :current_password, autocomplete: "off", required: true, label: false, hint: "Type your current password to confirm the changes", input_html: { type: "password", placeholder: "Current Password" } %>
                <span style="font-size: 2.2rem; left: 1.4rem;"><i class="fa fa-lock"></i></span>
              </div>

              <div class="form-actions">
                <%= f.button :submit, "Update Profile ✓", class: "btn submit-btn" %>
              </div>

              <br/>

              <div class="row line-space" style="margin-bottom: 3rem;">
              </div>

              <h5 class="text-center" style="margin-bottom: -1rem; top: 1rem;">Unhappy with Papyru?</h5>
              <h3 class="text-center" style="margin-bottom: -1rem; margin-left: 1.5rem;">Delete Your Account ❌</h3>
              <h1 class="text-center" style="font-size: 8rem; color: #FCB12A;">⚠</h1>

              <div class="form-actions">
                <%= link_to "Delete Profile", registration_path(resource_name), data: { confirm: "Are you sure you want to delete your account?" }, method: :delete, class: "btn close-btn" %>
              </div>

            <% end %>
          </div>

        </div>
      </div>
    </div>
  </div>
</div>

