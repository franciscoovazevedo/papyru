<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-10 col-sm-offset-1 col-md-8 col-md-offset-2 col-lg-6 col-lg-offset-3">
      <div class="row form-card">
        <div class="col-xs-10 col-xs-offset-1 col-sm-8 col-sm-offset-2">

          <div class="form-card-header text-center">
            <h1>Sign in to Papyru</h1>
            <p><span>Access your subjects</span> in a few clicks.</p>
          </div>

          <div class="form-card-content">
            <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), method: 'post') do |f| %>

              <div class="input">
                <%= f.input :email, required: true, label: false, autofocus: false, input_html: { type: "email", placeholder: "Email" } %>
                <span><i class="fa fa-envelope-o"></i></span>
              </div>

              <div class="input">
                <%= f.input :password, required: true, label: false, input_html: { type: "password", placeholder: "Password" } %>
                <span style="font-size: 2.2rem; left: 1.4rem;"><i class="fa fa-lock"></i></span>
              </div>

              <div class="remember">
                <%= f.input :remember_me, class: "remember-me", as: :boolean if devise_mapping.rememberable? %>
              </div>

              <div class="form-actions">
                <%= f.button :submit, "Continue →", class: "btn submit-btn" %>
              </div>

              <div class="forgot">
                <p class="pull-right forgot-pwd" id="forgot-pwd">Forgot Password?</p>
              </div>

              <!--
              <br/>

              <div class="row input hidden forgot-pwd-form" id="forgot-pwd-form">
                <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |p| %>
                  <p class="text-center" style="font-size: 1.6rem;">Enter your email and we'll send you a recovery link:</p>
                  <div class="input">
                    <%= p.input :email, required: false, label: false, autofocus: false, input_html: { type: "email", placeholder: "Email" } %>
                    <span style="left: 1.4rem;"><i class="fa fa-question-circle-o"></i></span>
                  </div>
                  <div class="form-actions">
                    <%= p.button :submit, "Reset Password →", class: "btn reset-btn" %>
                  </div>
                <% end %>
              </div>
              -->

              <div class="row line-space">
              </div>

              <br/>

              <div class="sign-up-form">
                <p style="display: inline;">Don't have an account?</p>
                <%- if devise_mapping.registerable? && controller_name != 'registrations'%>
                  <%= link_to "Sign up", new_registration_path(resource_name), class: 'sign-up' %>
                <% end -%>
              </div>

            <% end %>
          </div>

        </div>
      </div>
    </div>
  </div>
</div>
