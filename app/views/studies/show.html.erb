<div class="container-fluid">
  <div class="row">
    <div class="col-sm-3 col-md-3 col-lg-3 hidden-xs">
      <%= render 'shared/sidebar' %>
    </div>

    <div class="navbar-wagon-item hidden-sm hidden-md hidden-lg">
      <div class="dropdown">
        <p class="dropdown-toggle" data-toggle="dropdown">View all the channels </p>
        <ul class="dropdown-menu dropdown-menu-left navbar-wagon-dropdown-menu">
          <% @channels.each do |channel| %>
            <li><%= link_to channel.name, channel_path(channel) %></li>
          <% end %>
        </ul>
      </div>
    </div>


  </div>
</div>

<h2>Documents</h2>
<% @documents.each do |document| %>
  <%= document.filetype.capitalize %>
    <!-- This is the name of the file, we should link this to the actual document, but only in the next version, for the first Demo this is enough -->
  <%= document.name %>
<% end %>
