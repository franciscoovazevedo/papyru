<% content_for :title, "#{@channel.name} - #{@subject} | Papyru" %>

<div class="container-fluid">
  <div class="row content">

    <div class="sidebar">
      <h3><%= link_to "#{@channel.subject.name} Channel", study_path(@channel.study) %></h3>

      <p><%= link_to "< Back to #{@channel.subject.name} general channel", study_path(@channel.study), class: "go-back" %><p>

      <a data-toggle="modal" data-target="#newmessage" class="add-links" data-whatever="Recepient"><i class="fa fa-commenting-o" aria-hidden="true"></i> New message</a><br/>

      <% if current_user.teacher? %>
        <a data-toggle="modal" data-target="#editchannel" class="add-links"><i class="fa fa-pencil-square-o" aria-hidden="true"></i> Edit channel</a><br/>w
        <a data-toggle="modal" data-target=".bd-example-modal-lg" class="add-links"><i class="fa fa-plus-circle" aria-hidden="true" style="font-size: 1.9rem; margin-right: 0.2rem; margin-bottom: 1rem;"></i> New thread</a><br/>
      <% end %>

      <div class="threads-nav">
        <h4>Threads</h4>
        <% @channel.study.channels.each do |channel| %>
          <% if channel.name == @channel.name %>
            <p id="thread-name" style="color: #FEE064;">ğŸ“œ&nbsp; <%= @channel.name %></p>
          <% else %>
            <p id="thread-name"><%= link_to channel.name, channel_path(channel) %></p>
          <% end %>
        <% end %>
      </div>
    </div>

    <div class="col-md-9 page-content">

      <div class="col-sm-6">
        <div class="well">

          <h3>Messages</h3>

          <% @messages.each do |message| %>
            <div class="message-container">
            <% if message.user.teacher? %>
              <% if message.show? %>
                <h4><%= message.user.name %> <span style="font-size: 12px;">(<%= @subject %> <%= message.user.class %>)</span>
                  <%= image_tag avatar_url(current_user), class: "avatar" %>
                </h4>
                <p class="message-content"><%= message.content %></p>
                <p style="font-size: 12px; text-align: right;" class="message-posted-at">Posted on <%= l message.created_at %></p>
              <% end %>
              </div>
            <% end %>
          <% end %>
        </div>
      </div>

      <div class="col-sm-6">
        <%= render 'shared/documents_channel_show' %>
      </div>

    </div>
  </div>
</div>

<%= render 'shared/modal_new_message'%>
<%= render 'shared/modal_new_channel'%>
<%= render 'channels/edit' %>
