<footer class="footer-distributed">
  <div class="footer-left">

    <%= link_to root_path do %>
     <%= image_tag "logo_text.png", alt: "", class: "footer-logo" %>
    <% end %>

    <p class="footer-links">
      <%= link_to "Home", root_path %>
      ·
      <%= link_to "Why Papyru", why_papyru_path %>
      ·
      <%= link_to "About", about_us_path %>
      ·
      <%= link_to "Sign up", new_user_registration_path %>
      ·
      <%= link_to t(".sign_in", default: "Log In"), new_user_session_path %>
      ·
      <a href="mailto:contact@papyru.online">Contact</a>
    </p>

    <p class="footer-company-name">Papyru &copy; 2017, developed @ <a href="http://www.lewagon.com" target="_blank"><%= image_tag "logo_wagon.png", class: "wagon-logo" %></a></p>

    <div class="footer-icons">
      <a href="https://github.com/franciscoovazevedo/papyru" target="_blank"><i class="fa fa-github"></i></a>
      <a href="#"><i class="fa fa-facebook"></i></a>
      <a href="#"><i class="fa fa-twitter"></i></a>
      <a href="#"><i class="fa fa-linkedin"></i></a>
    </div>
  </div>

  <div class="footer-right">
    <span class="hidden-xs">→</span>

    <form>
      <input type="text" name="email" placeholder="Email"/>
      <textarea name="message" placeholder="Message"></textarea>
      <button>Send</button>
    </form>
  </div>
</footer>
