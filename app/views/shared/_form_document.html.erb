<%= field_set_tag 'Document' do %>
  <%= f.simple_fields_for :documents do |d| %>
    <%= d.input :name %>
    <%= d.input :filetype, as: :select, collection: %w( Exercise Exam Slide Notification ) %>
    <%= d.input :file, as: :file %>
    <%= d.input :file_cache, as: :hidden %>
    <%= d.submit %>
  <% end %>
<% end %>
